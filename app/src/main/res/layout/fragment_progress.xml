<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProgressFragment"
    android:background="#D8F1EF">

    <LinearLayout
        android:id="@+id/progress_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hijau_muda"
        android:orientation="vertical"
        android:paddingVertical="16dp"
        android:layout_marginTop="32dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Progress"
            android:fontFamily="@font/regular"
            android:textSize="32sp"
            android:textColor="#59B268"
            android:paddingStart="16dp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_gravity="center"
                    android:layout_width="272dp"
                    android:layout_height="128dp"
                    card_view:cardCornerRadius="4dp"
                    android:layout_marginHorizontal="16dp">
                    <ImageView
                        android:layout_width="272dp"
                        android:layout_height="128dp"
                        android:src="@drawable/math_bg"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Matematika"
                        android:fontFamily="@font/regular"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="bottom"
                        android:paddingBottom="16dp"
                        android:paddingStart="16dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_gravity="center"
                    android:layout_width="272dp"
                    android:layout_height="128dp"
                    card_view:cardCornerRadius="4dp"
                    android:layout_marginHorizontal="16dp">
                    <ImageView
                        android:layout_width="272dp"
                        android:layout_height="128dp"
                        android:src="@drawable/physics_bg"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Science"
                        android:fontFamily="@font/regular"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="bottom"
                        android:paddingBottom="16dp"
                        android:paddingStart="16dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_ll"
        android:background="@color/hijau_muda"
        android:orientation="vertical"
        android:paddingVertical="16dp"
        android:layout_marginTop="32dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Suggestion"
            android:fontFamily="@font/regular"
            android:textSize="32sp"
            android:textColor="#59B268"
            android:paddingStart="16dp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_gravity="center"
                    android:layout_width="272dp"
                    android:layout_height="160dp"
                    card_view:cardCornerRadius="4dp"
                    android:layout_marginHorizontal="16dp">
                    <ImageView
                        android:layout_width="272dp"
                        android:layout_height="160dp"
                        android:src="@drawable/physics_bg"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discover new activity!"
                        android:fontFamily="@font/regular"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="bottom"
                        android:paddingBottom="16dp"
                        android:paddingStart="16dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_gravity="center"
                    android:layout_width="272dp"
                    android:layout_height="160dp"
                    card_view:cardCornerRadius="4dp"
                    android:layout_marginHorizontal="16dp">
                    <ImageView
                        android:layout_width="272dp"
                        android:layout_height="160dp"
                        android:src="@drawable/math_bg"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Discover new activity!"
                        android:fontFamily="@font/regular"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="bottom"
                        android:paddingBottom="16dp"
                        android:paddingStart="16dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</RelativeLayout>