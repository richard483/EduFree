<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeFragment"
    android:padding="16dp"
    android:background="#E9FFFD">
    <ImageView
        android:id="@+id/fragment_welcome_logo_iv"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="64dp"/>

    <android.widget.Button
        android:id="@+id/fragment_welcome_login_bt"
        android:layout_width="236dp"
        android:layout_height="72dp"
        android:layout_below="@id/fragment_welcome_logo_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/edufree_button_theme"
        android:fontFamily="@font/regular"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="36sp" />
    <android.widget.Button
        android:id="@+id/fragment_welcome_register_bt"
        android:layout_width="236dp"
        android:layout_height="72dp"
        android:text="Register"
        android:fontFamily="@font/regular"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:background="@drawable/edufree_button_theme"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/fragment_welcome_login_bt"
        android:layout_margin="32dp"/>
</RelativeLayout>